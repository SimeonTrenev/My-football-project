{{> header}}

<section class="notifications" style="display: none;">
    <p class="notification-message" id="errorBox">Message...</p>
</section>
<section class="notifications" style="display: none;background-color:rgba(1, 131, 29, 0.541);">
    <p class="notification-message" id="successBox">Message...</p>
</section>


<div class="jumbotron jumbotron-fluid text-light" style="background-color: #343a40;">
    <img src="./V92L4K.jpg"
        class="img-fluid" alt="Responsive image">
    <h1 class="display-4">Football teams</h1>
    <p class="lead">Unlimited football teams, football players, and more. Watch their pictures, videos and share. Cancel anytime.</p>
</div>

{{#if isLoggedIn}}

<h1 class="text-center">Football clubs</h1>
<section>
    <a href="#/addTeam" class="btn btn-warning ">Add team or player</a>
    
    <form class="search float-right">
        <label>Search: </label>
        <input type="text" id="text">
        <a href="#/search">
        <input type="submit" class="btn btn-info"  value="Search">
        </a>
        
        
    </form>
</section>
{{#each clubs}}
<div class=" mt-3 ">
    <div class="row d-flex d-wrap">

        <div class="card-deck d-flex justify-content-center">

            <div class="card mb-4">
                <img class="card-img-top" src="{{this.imageUrl}}" alt="Card image cap"
                    width="400">
                <div class="card-body">
                    <h4 class="card-title">{{this.title}}</h4>
                </div>
                <div class="card-footer">
                    <a href="#/details/{{this.id}}"><button type="button"
                            class="btn btn-info">Details</button></a>
                </div>

            </div>

        </div>
    </div>
</div>
{{else}}
<h1>NO FOOTBALL CLUB YET....</h1>
{{/each}}
{{/if}}

{{> footer}}